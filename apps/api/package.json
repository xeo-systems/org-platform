{
  "name": "@saas/api",
  "private": true,
  "main": "src/server.ts",
  "types": "src/server.ts",
  "scripts": {
    "dev": "ts-node-dev --respawn --transpile-only src/server.ts",
    "build": "pnpm --filter @saas/shared build && pnpm --filter @saas/db build && tsc -p tsconfig.json",
    "typecheck": "pnpm --filter @saas/shared build && pnpm --filter @saas/db build && tsc -p tsconfig.json --noEmit",
    "test": "vitest run",
    "start": "node dist/server.js"
  },
  "dependencies": {
    "@sentry/node": "7.114.0",
    "@fastify/cookie": "9.3.0",
    "@fastify/cors": "9.0.0",
    "fastify-raw-body": "4.2.2",
    "@saas/db": "workspace:*",
    "@saas/shared": "workspace:*",
    "bcryptjs": "2.4.3",
    "bullmq": "4.12.2",
    "dotenv": "16.4.5",
    "fastify": "4.27.0",
    "pino": "9.0.0",
    "stripe": "14.12.0",
    "@types/node": "20.11.30",
    "zod": "3.23.8"
  },
  "devDependencies": {
    "@types/bcryptjs": "2.4.6",
    "supertest": "6.3.4",
    "ts-node-dev": "2.0.0",
    "typescript": "5.4.5",
    "vitest": "1.5.2"
  }
}
